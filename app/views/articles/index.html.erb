<div class="container mt-5">
  <div class="float-end">
    <a href="/articles/new"><button class="btn btn-primary mt-4 mb-4">New Article</button></a>
  </div>
  <% @articles.each do |article| %>
    <div class="mb-4">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <%= article.content %>
    </div>
  <% end %>
</div>
